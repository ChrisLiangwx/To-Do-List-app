<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--this fragment will not be used. Its view will be replaced by a list of tasks defined in Workout.java-->
    <fragment
        android:id="@+id/to_do_list_fragment"
        android:name = "com.wl.todolistapp.ToDoListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />



    <!--components to add tasks-->

    <EditText
        android:id="@+id/newTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_gravity="bottom|end"
        android:hint="Task Title" />
    <EditText
        android:id="@+id/newTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_gravity="bottom|end"
        android:hint="Task Description" />
    <Button
        android:id="@+id/addTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="Add New Task"
        android:onClick="onClickAddTask"/>

<!--search-->
    <EditText
        android:id="@+id/editText_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:hint="Title of task"/>

    <Button
        android:id="@+id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="Search"
        android:onClick="onClickSearchTask"/>



</LinearLayout>



